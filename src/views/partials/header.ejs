<header class="header">

  <a href="/"> <img id="logo" class="header__logo" src="/images/logo.jpg" alt=""></a>

  <button class="header__hamburger">
    <i class="fas fa-bars"></i>
  </button>
  <nav class="header__nav">
    <ul class="header__nav--menu">
      <li>
        <a href="/courses/list">cursos</a>
      </li>
      <li>
        <a href="/buscar">buscar</a>
      </li>
    </ul>
    <ul class="header__nav--user">
      <% if (locals.userLogin) { %>
        <% if (userLogin.rol === "admin") { %>
          <li>
            <a href="/admin">Dashboard</a>
          </li>
        <% } %>
        <li>
          <a href="/users/profile">Hola, <%= userLogin.name %></a>
        </li>
        <li>
          <a href="/users/logout">Salir</a>
        </li>
      <% }else{ %>
      <li>
        <a href="/users/register">registrar</a>
      </li>
      <li>
        <a href="/users/login">ingresar</a>
      </li>
      <% } %>
    </ul>
  </nav>
</header>