<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head', {
  title: "Agregar curso"
}) %>

  <body class="form">
    <!-- encabezado -->
    <%- include('../partials/header') %>

      <!-- principal -->
      <main class="form__main">
        <h2>Formulario: Editar curso</h2>
        <hr>
        <div class="row">
          <div class="col-12 col-md-8 mx-auto">
            <div class="card">
              <div class="card-body">
                <form action="/courses/update/<%= id %>?_method=PUT" class="row" method="POST" enctype="multipart/form-data">
                  <div class="col-10 mb-3">
                    <label for="title" class="form-label">Título</label>
                    <input type="text" class="form-control" id="title" placeholder="Título del curso" name="title" value="<%= locals.old && old.title ? old.title : title %>">
                    <small class="text-danger ms-2"><%= locals.errors && locals.errors.title ? locals.errors.title.msg : null%></small>
                  </div>
                  <div class="col-2 mb-3">
                    <label for="price" class="form-label">Precio</label>
                    <input type="number" class="form-control" id="price" name="price" value="<%= price %>">
                    <small class="text-danger ms-2"><%= locals.errors && locals.errors.price ? locals.errors.price.msg : null%></small>
                  </div>
                  <div class="col-12 mb-3">
                    <label for="chef" class="form-label">Chef</label>
                    <select name="chef" id="chef" class="form-control">
                      <% chefs.forEach(({name}) => { %>
                        <option value="<%= name %>" <%= chef === name && "selected" %>  ><%= name %></option>
                      <% }) %>
                    </select>
                    <small class="text-danger ms-2"><%= locals.errors && locals.errors.chef ? locals.errors.chef.msg : null%></small>
                  </div>
                  <div class="col-12 mb-3">
                    <label for="description" class="form-label">Descripción</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description"><%= locals.old && old.description ? old.description : description %></textarea>
                    <small class="text-danger ms-2"><%= locals.errors && locals.errors.description ? locals.errors.description.msg : null%></small>
                  </div>
                  <div class="col-12 mb-3">
                    <div class="d-flex justify-content-around">
                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="section" id="new" <%= newest && "checked" %> value="newest">
                        <label class="form-check-label" for="new">
                          Nuevo
                        </label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="section" id="sale" <%= sale && "checked" %> value="sale">
                        <label class="form-check-label" for="sale">
                          Oferta
                        </label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="section" id="free" <%= free && "checked" %> value="free">
                        <label class="form-check-label" for="free">
                          Gratis
                        </label>
                      </div>
                      <small class="text-danger ms-2"><%= locals.errors && locals.errors.section ? locals.errors.section.msg : null%></small>
                    </div>
                  </div>
                  <div class="col-3 mb-3 d-flex justify-content-center align-items-end">
                    <div class="form-check form-switch">
                      <input class="form-check-input" type="checkbox" id="visible" name="visible" <%= visible && "checked" %>>
                      <label class="form-check-label" for="flexSwitchCheckDefault">Visible</label>
                    </div>
                  </div>
                  <div class="col-9 mb-3">
                    <label for="image" class="form-label">Imagen</label>
                    <input type="file" class="form-control" id="image" name="image"></input>
                  </div>
                  <div class="d-flex justify-content-end">
                    <button type="submit" class="buttons buttons__primary">Actualizar curso</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </main>
      <!-- pie de pagina -->

      <%- include('../partials/footer') %>


        <%- include('../partials/scripts') %>

          <script src="/javascripts/home.js"></script>

  </body>

</html>